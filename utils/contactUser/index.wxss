.login-view {
    width: 100vw;
    height: 100vh;
    position: fixed;
    z-index: 10;
    left: 0;
    top: 0;
    background: rgba(0, 0, 0, .5);
    transform: translate3d(0, 100%, 0);
}

.trueshow {
    transform: translate3d(0, 0, 0);
    transition-duration: 400ms;
}

.falseshow {
    transform: translate3d(0, 100%, 0);
    transition-duration: 200ms;
}

.content {
    width: 600rpx;
    height: 416rpx;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
}

.content .info {
    margin-top: 96rpx;
    /* height: 320rpx; */
    background-color: #ffffff;
    border-radius: 20px;
    position: relative;
    /* 后面增加手机号删除下行 */
    padding-bottom: 40rpx;
}

.head-img {
    width: 132rpx;
    height: 132rpx;
    border: 6rpx solid #fff;
    border-radius: 50%;
    position: absolute;
    top: -96rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    background: #ffffff;
}

.info {
    font-size: 28rpx;
    padding: 60rpx 48rpx 0 48rpx;
    box-sizing: border-box;
}

button:after {
    border: none;
}

.info button {
    width: 120rpx;
    height: 60rpx;
    border-radius: 30rpx;
    border: 2rpx solid #e4e4e4;
    color: #666666;
    padding: 0;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    background: #fff;
}

.info .title {
    color: #666666;
}

.info .text {
    color: #333333;
}

.info .item {
    width: 504rpx;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

