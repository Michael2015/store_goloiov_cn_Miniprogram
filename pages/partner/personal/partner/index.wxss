/* pages/partner/personal/partner/index.wxss */
scroll-view{
  height: 100vh;
}
.wrap{
  padding-bottom: 140rpx;
}
.top{
  background: #f9f9f9;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  min-height: 108rpx;
}
.top .avatar{
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  background: #ddd;
  overflow: hidden;
}
.top .avatar image{
  width: 100%;
  height: 100%;
}
.top .name{
  font-size: 28rpx;
  color:#333;
  padding-left: 22rpx;
}
.top .sum{
  font-size:24rpx;
  color:#666;
  flex: 1;
  text-align: right;
}
.top .sum text{
  font-size: 28rpx;
  color:#e70002;
}
.search-wrap{
  margin: 24rpx;
  background: #f5f5f5;
  display: flex;
  min-height: 72rpx;
  align-items: center;
  border-radius: 36rpx;
  padding: 0 34rpx;
  margin-bottom: 0;
}
.search-wrap .icon{
  width: 24rpx;
  height: auto;
  vertical-align: middle;
}
.search-wrap input{
  font-size: 32rpx;
  padding: 0 22rpx;
  flex:1;
}
.placeholder {
  font-size: 32rpx;
  color: #d5d5d5;
}
.list{
  padding: 0 24rpx;
  margin-left: -3.6%;
}
.list:after{
  content: ' ';
  display: block;
  width: 100%;
  height: 0;
  clear: both;
}
.longName{
  position: absolute;
  left: 0;
  top: -24rpx;
  font-size: 20rpx;
  height: 24rpx;
  line-height: 24rpx;
  width: 100%;
  text-align: center;
  white-space: nowrap;
}
.list .item{
  width: 16%;
  margin-left:3.6%;
  float:left;
  margin-top: 48rpx;
  position: relative;
}
.list .item .avatar{
  width: 100%;
  padding-bottom: 100%;
  position: relative;
  background: #ddd;
  border-radius: 50%;
  overflow: hidden;
}
.list .item .avatar image{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
}
.list .item .badge{
  position: absolute;
  right: -18rpx;
  top:0;
  background: #fff;
  color:#e70002;
  border:1px solid #e70002;
  height: 50rpx;
  line-height: 46rpx;
  text-align: center;
  box-sizing: border-box;
  min-width: 50rpx;
  padding:0 6rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
}
.list .item .name{
  padding: 0 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  font-size: 20rpx;
  color:#666;
  height: 24rpx;
  line-height: 24rpx;
  margin-top: 12rpx;
}
.bottom{
  position: fixed;
  z-index: 1;
  background: #f5f5f5;
  left:0;
  bottom: 0;
  width: 100%;
  padding: 20rpx 0;
  font-size:0;
  text-align: center;
}
.bottom .btn{
  color:#fff;
  font-size: 32rpx;
  line-height: 80rpx;
  padding: 0 28rpx;
  box-sizing: border-box;
  min-width: 240rpx;
  margin: 0 auto;
  display: inline-block;
  background: linear-gradient(to right, #ef5355, #e70203);
  border-radius: 40rpx;
  text-align: center;
}
.bottom .contact{
  width: 70rpx;
  height: 70rpx;
  /* border-radius: 50%;
  border:1px solid #e4e4e4;
  background: #fff; */
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 50%;
  overflow: hidden;
}
.bottom .contact image{
  width: 100%;
  height: 100%;
}