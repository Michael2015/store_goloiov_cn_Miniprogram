</view>
<wxs module="tailSix">
  module.exports = function(str) {
    var s = str + ''
    return s[s.length-6] + s[s.length-5] + s[s.length-4] + s[s.length-3] + s[s.length-2] + s[s.length-1]
  }
</wxs>