/* components/order/popup/shouhuo.wxss */
.mask{
  position: fixed;
  left:0;
  right: 0;
  top:0;
  bottom: 0;
  z-index: 9999;
  background: rgba(0, 0, 0, .4);
}
.wrap{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  min-height: 400rpx;
  background: #fff;
  z-index: 99999;
  border-radius: 32rpx;
  text-align: center;
  overflow: hidden;
}
.title{
  font-size: 30rpx;
  color:#373737;
  margin-top: 48rpx;
}
.one,.two{
  font-size:26rpx;
  color:#666;
  line-height: 40rpx;
  width: 346rpx;
  margin: 0 auto;
  text-align: left;
}
.one{
  margin-top: 48rpx;
}
.two{
  margin-top: 10rpx;
}
.btn-wrap{
  margin-top: 62rpx;
  height: 92rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.btn-wrap:after{
  content: ' ';
  display: block;
  position:absolute;
  left: 0;
  right: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform:scaleY(0.5);
  -webkit-transform:scaleY(0.5);
  background:#a5a5a5;
}
.btn-wrap>view{
  flex: 1;
  font-size:30rpx;
  color:#4b4b4b;
  line-height:88rpx;
  height: 100%;
}
.btn-wrap>view.active{
  color:#fff;
  background:#ea2224;
}