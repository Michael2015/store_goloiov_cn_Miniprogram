view{
  box-sizing: border-box;
}
page{
  background-color: #f9f9f9;
}
.add{
  padding: 24rpx;
}
.form{
  padding: 0 24rpx;
  background-color: #fff;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666666;
}
.form .row{
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  position: relative;
}
.form .row::after{
  content: ' ';
  display: block;
  position:absolute;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  transform:scaleY(0.5);
  -webkit-transform:scaleY(0.5);
  background:#eee;
}
.form .row .placeholder{
  color: #d5d5d5;
}
.form .row .col-1{
  with: 185rpx;
}
.form .row .col-2{
  width: calc(100% - 185rpx);
}
.form .row .col-2.choose{
  display: flex;
  flex-wrap: nowrap;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.form .row .col-2.choose .arrows{
  color: #bfbfbf;
}
.form .row.desc{
  color: #999999;
  font-size: 24rpx;
}
.button{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  color: #fff;
  background-color: #e70002;
  font-size: 36rpx;
  text-align: center;
}