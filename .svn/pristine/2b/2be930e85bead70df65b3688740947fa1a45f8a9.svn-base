.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 560rpx;
  position: fixed;
  top: -4%;
  left: 12%;
  z-index: 9999;
}
.modal-dialog image
{
  width:560rpx;
  height: 1120rpx;
}
.modal-title {
  color: #030303;
  text-align: center;
  padding: 15rpx 0;
}
.modal-content {
  position: fixed;
  width: 560rpx;
  text-align: center;
  top: 46%;
  left: 12%;
  color: #fff;
  font-weight: bold;
  height: 140rpx;
}
.modal-content .nav{
    width: 50%;
    margin: 0 auto;
}
.modal-content .head
{
    font-size: 45rpx;
    color: #AA0000;
}
.modal-content .title
{
    text-align: left;
    color:#555;
    font-size: 20rpx;
    font-weight: normal;
    font-family: 'Courier New', Courier, monospace;
}

.modal-dialog .close
{
  width: 560rpx;
  text-align: center;
  position: fixed;
  top: 72%;
  left: 12%;
}
.modal-dialog .close image{
    width: 50rpx;
    height: 50rpx;
}