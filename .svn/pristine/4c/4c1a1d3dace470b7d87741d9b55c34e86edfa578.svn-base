@import '/assets/wxss/search.wxss';
@import '/assets/wxss/tutorial.wxss';

page {
  background: #f9f9f9;
}

.page_set {
  height: 70rpx;
  padding: 0 19rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.commodity_list .commodity_item .title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  margin-top: -5rpx;
  height: 91rpx;
  line-height: 40rpx;
}

.commodity_list .commodity_item  em.text-u
{
  text-decoration: line-through;
  font-size: 20rpx;
}
.share_btn {
  width:25%;
  height: 60rpx;
  border: 1rpx solid #fff;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  padding: 0;
  background: #e70002;
  color: #fff;
  justify-content: flex-start;
  align-items: center;
  margin: 30rpx 24rpx 29rpx 0;
}
.index_search_swiper {
  font-size: 26rpx;
  width: 542rpx;
  height: 60rpx;
  color: #e70002;
}

.commodity_list {
  height: calc(100vh - 235rpx);
  margin-top: 0rpx;
}


.clear_icon {
  width: 35rpx;
}

.show {
  visibility: visible;
}

.hide {
  visibility: hidden;
}

