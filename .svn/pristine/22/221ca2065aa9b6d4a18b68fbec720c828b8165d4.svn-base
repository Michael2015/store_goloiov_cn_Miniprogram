page {
  background: #fff;
}

.cimg {
  width: 120rpx;
  height: 120rpx;
  display: block;
  margin: 177rpx auto 40rpx auto;
}

.textView {
  width: 100vw;
  text-align: center;
}

.textView .title {
  font-size: 38rpx;
  color: #333;
  width: 90%;
  margin: 0 auto 29rpx auto;
}

.textView .desc {
  font-size: 28rpx;
  color: #666;
}

.btnView {
  margin-top: 207rpx;
  display: flex;
  justify-content: space-around;
}

.btnView .item {
  width: 33.33vw;
  text-align: center;
}

.btnView .item image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.btnView .item view {
  font-size: 28rpx;
  color: #333;
  line-height: 1;
  margin-top: -10rpx;
}

.btnView .item {
  position: relative;
}

.share {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
  opacity: 0;
}
