.commodity_list .commodity_item .volume {
  font-size: 24rpx;
  color: #c01f1f;
}
.commodity_list .commodity_item .volume .small{
  color: #999;
}
.commodity_list .commodity_item .coupon
{
  position: absolute;
}
.commodity_list .commodity_item text.coupon3
{
  color: #fff;
  background: #e70002;  
  display: block;
  font-size: 20rpx; 
  width: 120rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
}
.commodity_list .commodity_item .coupon4
{
  background: #fff;
  width: 128rpx;
  border: 1rpx solid #e70002;
  color: #999;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 638rpx;
  position: fixed;
  top: 6%;
  left: 6%;
  z-index: 9999;
}
.modal-dialog image
{
  width:638rpx;
  height: 826rpx;
}
.modal-title {
  color: #030303;
  text-align: center;
  padding: 15rpx 0;
}
.modal-content {
  position: absolute;
  width: 638rpx;
  text-align: center;
  top: 55%;
  color: #fff;
  font-weight: bold;
  height: 160rpx;
}
.modal-content .nav{
    width: 60%;
    margin: 0 auto;
}
.modal-content .head
{
    font-size: 50rpx;
    color: #AA0000;
}
.modal-content .title
{
    text-align: left;
    color:#555;
    font-size: 25rpx;
    font-weight: normal;
    font-family: 'Courier New', Courier, monospace;
}

.modal-dialog .close
{
  width: 638rpx;
  text-align: right;
  position: fixed;
  top: 2%;
  left: 6%;
}
.modal-dialog .close image{
    width: 50rpx;
    height: 50rpx;
}