/* 提交电话号码 */
.popup-submit-phone{
  background-color: #fff;
  position: fixed;
  left:0;
  bottom:0;
  z-index: 2;
  padding: 0 38rpx;
  width: 100%;
  min-height: 630rpx;
  box-sizing: border-box;
  color:#333;
}
.popup-submit-phone .title{
  font-size: 44rpx;
  padding: 52rpx 0 26rpx;
  font-weight: 800;
}
.popup-submit-phone .col{
  display: flex;
  align-items: center;
  height: 94rpx;
  position: relative;
}
.popup-submit-phone .col:nth-child(2){
  margin-top: 20rpx;
  padding-right: 180rpx;
}
.popup-submit-phone .col:after{
  content: ' ';
  display: block;
  position: absolute;
  height: 1px;
  transform: scaleY(.5);
  left: 0;
  width: 100%;
  bottom: 0;
  background: #e4e4e4;
}
.popup-submit-phone .col input{
  font-size: 28rpx;
  flex:1;
  padding: 0 10rpx;
}
.popup-submit-phone .col .icon{
  width: 40rpx;
  text-align: center;
  display: none;
}
.popup-submit-phone .col .icon image{
  width:100%;
  height: auto;
}
.popup-submit-phone .col .icon image.phone{
  width: 50%;
}
.popup-submit-phone .col .icon image.check{
  width: 70%;
}
.popup-submit-phone .get-phone{
  text-align: left;
}
.popup-submit-phone .get-phone button{
  text-align: left;
  color:#e70002;
  background: #fff;
  background-color: #fff;
  display: inline-block;
  font-size: 16px;
  padding-left:0;
}
.popup-submit-phone .get-phone text{
  /* text-decoration: underline; */
}
.popup-submit-phone .submit {
  line-height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  font-size: 32rpx;
  color:#fff;
  background: linear-gradient(to right, #ef5456, #e70002);
  width: 64%;
  margin: 110rpx auto 0rpx;
  /* margin: 30rpx auto 0; */
}
.popup-submit-phone .submit.disabled{
  background:#e4e4e4;
}
.popup-submit-phone  .input_placeholder{
  font-size: 28rpx;
  color:#d5d5d5;
}
.popup-submit-phone .check-code{
  font-size: 24rpx;
  color:#e70002;
  text-align: center;
  position: absolute;
  top:50%;
  margin-top: -24rpx;
  right: 10rpx;
  border: 1px solid #e70002;
  border-radius: 4px;
  height: 48rpx;
  line-height: 44rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  min-width: 142rpx;
  z-index: 1;
}