.popup-contact, .popup-contact .mask, .popup-contact .main, .popup-contact .supplier, .popup-contact .title, .popup-contact .name, .popup-contact tel,
.popup-contact .col-1, .popup-contact .col-2, .partner, .row{
  box-sizing: border-box;
}
.popup-contact .mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 98;
  background-color: rgba(0, 0, 0, .2);
}
.popup-contact .main{
  background-color: #fff;
  width: 600rpx;
  position: fixed;
  padding: 40rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 99;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;
}

.popup-contact .main .supplier {
  position: relative;
  padding-bottom: 40rpx;
  text-align: center;
}

.popup-contact .main .supplier:after{
  content: ' ';
  display: block;
  position:absolute;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  transform:scaleY(0.5);
  -webkit-transform:scaleY(0.5);
  background:#ddd;
}

.popup-contact .main .supplier .title{
  font-size: 32rpx;
}
.popup-contact .main .supplier .name {
  margin-top: 20rpx;
  font-size: 32rpx;
  line-height: 1.2;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
}
.popup-contact .main .supplier .tel{
  width: 100%;
  font-size: 28rpx;
  display: flex;
  flex-wrap: nowrap;
  flex-direction: row;
  justify-content: center;
  margin-top: 20rpx;
}
.popup-contact .main .supplier .tel .col-2 {
  padding-left: 20rpx;
}

.partner{
  width: 100%;
  padding-top: 20rpx;
}
.partner .row{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  height: 98rpx;
  font-size: 28rpx;
}
.partner .col-1{
  width: 3.5em;
  text-align: right;
  color: #666;
}
.partner .col-2{
  width: calc(100% - 3.5em - 120rpx);
  padding-left: 40rpx;
}
.partner .col-3{
  width: 120rpx;
}
.partner .col-3 .btn{
  width: 100%;
  border: 1px solid #e4e4e4;
  height: 58rpx;
  line-height: 54rpx;
  text-align: center;
  -webkit-border-radius: 58rpx;
  -moz-border-radius: 58rpx;
  border-radius: 58rpx;
}