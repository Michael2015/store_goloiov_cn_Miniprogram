@import '/assets/wxss/search.wxss';
@import '/assets/wxss/tutorial.wxss';

page {
  background: #f9f9f9;
}

.page_set {
  height: 70rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.commodity_list .commodity_item .title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  margin-top: -5rpx;
  height: 80rpx;
  line-height: 40rpx;
}

.share_btn {
  min-width: 160rpx;
  height: 60rpx;
  border: 2rpx solid #fff;
  margin: 0;
  padding: 0 12rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  text-align: center;
  border-radius: 30rpx;
  background: transparent;
  color: #fff;
}

.search_nav {
  height: 229rpx;
}

.commodity_list {
  height: calc(100vh - 229rpx);
  margin-top: 229rpx;
}


.clear_icon {
  width: 35rpx;
}

.show {
  visibility: visible;
}

.hide {
  visibility: hidden;
}

