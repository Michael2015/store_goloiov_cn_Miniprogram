/* 提交电话号码 */
.popup-submit-phone{
  background-color: #fff;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  padding: 0 30rpx;
  border-radius: 10px;
  width: 80%;
}
.popup-submit-phone .title{
  font-size: 28rpx;
  color:#666;
  padding: 46rpx 0 26rpx;
}
.popup-submit-phone .col{
  display: flex;
  align-items: center;
  height: 68rpx;
  position: relative;
}
.popup-submit-phone .col:nth-child(2){
  margin-top: 20rpx;
  padding-right: 150rpx;
}
.popup-submit-phone .col:after{
  content: ' ';
  display: block;
  position: absolute;
  height: 1px;
  transform: scaleY(.5);
  left: 0;
  width: 100%;
  bottom: 0;
  background: #e4e4e4;
}
.popup-submit-phone .col input{
  font-size: 28rpx;
  flex:1;
  padding: 0 10rpx;
}
.popup-submit-phone .col .icon{
  width: 40rpx;
  text-align: center;
}
.popup-submit-phone .col .icon image{
  width:100%;
  height: auto;
}
.popup-submit-phone .col .icon image.phone{
  width: 50%;
}
.popup-submit-phone .col .icon image.check{
  width: 70%;
}
.popup-submit-phone .submit {
  line-height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  font-size: 32rpx;
  color:#fff;
  background: linear-gradient(to right, #ef5456, #e70002);
  width: 64%;
  margin: 50rpx auto 40rpx;
}
.popup-submit-phone .submit.disabled{
  background:#e4e4e4;
}
.popup-submit-phone  .input_placeholder{
  font-size: 28rpx;
  color:#d5d5d5;
}
.popup-submit-phone .check-code{
  font-size: 24rpx;
  color:#e70002;
  text-align: center;
  position: absolute;
  top:0;
  right: 10rpx;
  border: 1px solid #e70002;
  border-radius: 4px;
  height: 48rpx;
  line-height: 44rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  min-width: 142rpx;
  z-index: 1;
}