<view class="add">
    <view class="form">
        <view class="row">
            <view class="col-1">持卡人</view>
            <view class="col-2">
                <input type="text" placeholder="请输入持卡人姓名" placeholder-class="placeholder" value="{{name}}"/>
            </view>
        </view>
        <view class="row">
            <view class="col-1">银行卡号</view>
            <view class="col-2">
                <input type="text" placeholder="请输入银行卡号" placeholder-class="placeholder"/>
            </view>
        </view>
        <view class="row">
            <view class="col-1">银行</view>
            <view class="col-2 choose placeholder">
                <view>请选择银行</view>
                <view class="arrows"> > </view>
            </view>
        </view>
        <view class="row desc">
            <view>*银行持卡人必须与当前微信账户实名用户相同</view>
        </view>
    </view>
    <view class="button">确定</view>
</view>